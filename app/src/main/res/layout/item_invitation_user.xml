<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="7"
    android:paddingHorizontal="25dp"
    android:paddingVertical="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfileImgItemInvitation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:civ_border_color="@color/colorDarkGray"
        app:civ_border_width="0.5dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nicknameItemInvitation"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="앙나"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/avgPaceInvitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/InvitationBT"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/bt_login_green"
        android:text="초대"
        android:fontFamily="@font/binggraesamanco"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/Invited"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/count_bg_seethrough"
        android:text="초대 완료"
        android:fontFamily="@font/binggraesamanco"
        android:visibility="gone"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


</LinearLayout>