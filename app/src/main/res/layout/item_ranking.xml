<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="5dp"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/rankText"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1위" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImgRanking"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            app:civ_border_color="@color/colorDarkGray"
            app:civ_border_width="0.5dp" />

        <TextView
            android:id="@+id/nicknameRanking"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggraesamancobold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="앙나"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/goldMedalCount"
            style="@style/CustomTextRecord"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10" />

    <TextView
        android:id="@+id/silverMedalCount"
        style="@style/CustomTextRecord"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="10" />

    <TextView
        android:id="@+id/bronzeMedalCount"
        style="@style/CustomTextRecord"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="10"/>

    <TextView
        android:id="@+id/medalCountTotal"
        style="@style/CustomTextRecord"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="10" />

