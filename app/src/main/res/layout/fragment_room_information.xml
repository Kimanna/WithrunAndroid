<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomInformationFragment">

    <ImageView
        android:id="@+id/roomPhoto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:alpha="0.6"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/participate"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/binggraesamancobold"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomPhoto" />

    <Button
        android:id="@+id/raceRightAway"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bt_login_green"
        android:fontFamily="@font/binggraesamancobold"
        android:text="+ 바로시작"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomPhoto" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roomPhoto"
        app:srcCompat="@drawable/calendar" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="@id/imageView10"
        app:layout_constraintTop_toBottomOf="@id/imageView10"
        app:srcCompat="@drawable/clock" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="@id/imageView10"
        app:layout_constraintTop_toBottomOf="@id/imageView11"
        app:srcCompat="@drawable/placeholder" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="@id/imageView10"
        app:layout_constraintTop_toBottomOf="@id/imageView12"
        app:srcCompat="@drawable/user2" />

    <TextView
        android:id="@+id/roomDate"
        style="@style/CustomTextroom"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@id/textView55"
        app:layout_constraintTop_toTopOf="@id/imageView10" />

    <TextView
        android:id="@+id/roomStartTime"
        style="@style/CustomTextroom"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@id/textView56"
        app:layout_constraintTop_toTopOf="@id/imageView11" />

    <TextView
        android:id="@+id/roomDistance"
        style="@style/CustomTextroom"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@id/textView57"
        app:layout_constraintTop_toTopOf="@id/imageView12" />

    <TextView
        android:id="@+id/roomGender"
        style="@style/CustomTextroom"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintStart_toEndOf="@id/textView58"
        app:layout_constraintTop_toTopOf="@id/imageView13" />

    <TextView
        android:id="@+id/textView55"
        style="@style/CustomTextroom"
        android:layout_marginBottom="3dp"
        android:text="날자 : "
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@id/imageView10"
        app:layout_constraintTop_toTopOf="@id/imageView10" />

    <TextView
        android:id="@+id/textView56"
        style="@style/CustomTextroom"
        android:text="러닝 시작 시간 : "
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@id/imageView11"
        app:layout_constraintTop_toTopOf="@id/imageView11" />

    <TextView
        android:id="@+id/textView57"
        style="@style/CustomTextroom"
        android:text="러닝 거리 : "
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@id/imageView12"
        app:layout_constraintTop_toTopOf="@id/imageView12" />

    <TextView
        android:id="@+id/textView58"
        style="@style/CustomTextroom"
        android:text="성별 지정 : "
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintStart_toEndOf="@id/imageView13"
        app:layout_constraintTop_toTopOf="@id/imageView13" />


    <TextView
        android:id="@+id/timertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/binggraesamancobold"
        android:text="경기 시작까지 남은 시간"
        android:textColor="@color/inkwell"
        android:textSize="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/binggraesamancobold"
        android:textColor="@color/inkwell"
        android:textSize="60dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/roomPhoto"
        app:layout_constraintEnd_toEndOf="@+id/timertitle"
        app:layout_constraintStart_toStartOf="@+id/timertitle"
        app:layout_constraintTop_toBottomOf="@id/timertitle" />

    <TextView
        android:id="@+id/memberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/numOfPeopleRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memberCount" />

    <View
        android:id="@+id/divider21"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/numOfPeopleRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세정보"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider21"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:paddingHorizontal="20dp"
        android:text="- 경기 출발시간 도달하면 경기는 자동 시작되니, 공정한 경기를 위해 경기 참가자는 출발 시간을 준수해 주시기 바랍니다."
        android:textColor="@color/colorDarkslategray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView37" />


    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:paddingHorizontal="20dp"
        android:text="- 경기 중도포기 시 중도시점의 기록이 저장되며, 순위는 매겨지지 않습니다."
        android:textColor="@color/colorDarkslategray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView41" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:paddingHorizontal="20dp"
        android:text="- 완주 후 방을 나가게되면 재 입장이 불가하니 참고 바랍니다."
        android:textColor="@color/colorDarkslategray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView46" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:paddingHorizontal="20dp"
        android:text="- 최종 경기 순위는 모든 유저가 마라톤을 종료한 경우 확인 가능합니다."
        android:textColor="@color/colorDarkslategray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView64" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackNot"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="60dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countdown10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/RED"
        android:textSize="140dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@id/view2" />

    <TextView
        android:id="@+id/startGameAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="러닝 경기가 곧 시작됩니다"
        android:textColor="@color/RED"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@id/view2" />

</android.support.constraint.ConstraintLayout>