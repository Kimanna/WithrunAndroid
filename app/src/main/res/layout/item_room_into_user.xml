<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfileImgItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:civ_border_color="@color/colorDarkGray"
        app:civ_border_width="0.5dp" />

    <TextView
        android:id="@+id/nicknameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textSize="11dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ProfileImgItem"
        app:layout_constraintLeft_toLeftOf="@id/ProfileImgItem"
        app:layout_constraintRight_toRightOf="@id/ProfileImgItem" />

    <ImageView
        android:id="@+id/roomManager"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/crown_black"
        app:layout_constraintBottom_toBottomOf="@id/ProfileImgItem"
        app:layout_constraintRight_toRightOf="@id/ProfileImgItem" />

</android.support.constraint.ConstraintLayout>