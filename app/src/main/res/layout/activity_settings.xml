<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@color/lightgrey2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/backtoProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="24dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:background="@drawable/bottomlines">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개인설정"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:textColor="@color/black"/>

            <Switch
                android:id="@+id/pushNoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@color/inkwell"
                android:textSize="20dp"
                android:text="푸시 알림" />

            <Switch
                android:id="@+id/emailNoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@color/inkwell"
                android:textSize="20dp"
                android:text="이메일 알림" />

            <Switch
                android:id="@+id/allowInvitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@color/inkwell"
                android:textSize="20dp"
                android:text="초대 허용" />

            <Switch
                android:id="@+id/openrecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@color/inkwell"
                android:textSize="20dp"
                android:text="기록 공개" />

<!--            <Switch-->
<!--                android:id="@+id/turnOffScreen"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginVertical="5dp"-->
<!--                android:textColor="@color/inkwell"-->
<!--                android:textSize="20dp"-->
<!--                android:text="러닝중 음성알림" />-->

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ultimategray" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="추가"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginVertical="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/support"
                style="@style/CustomTextViewStyle"
                android:text="고객지원" />

            <TextView
                android:id="@+id/terms"
                style="@style/CustomTextViewStyle"
                android:text="서비스 이용약관" />

            <TextView
                android:id="@+id/personalPolicy"
                style="@style/CustomTextViewStyle"
                android:text="개인정보 처리방침" />

            <TextView
                android:id="@+id/agreeServiceUse"
                style="@style/CustomTextViewStyle"
                android:text="서비스 이용 동의" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/inkwell"
                    android:layout_weight="9"
                    android:text="버전" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/amethystorchid"
                    android:layout_weight="1"
                    android:text="1.1.0.a" />
            </LinearLayout>

            <View
                android:id="@+id/divider12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ultimategray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/logout"
                style="@style/CustomTextViewStyle"
                android:text="로그아웃" />

            <TextView
                android:id="@+id/withdrawal"
                style="@style/CustomTextViewStyle"
                android:text="서비스 탈퇴" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>