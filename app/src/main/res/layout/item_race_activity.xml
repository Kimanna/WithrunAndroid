<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:elevation="3dp"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="10"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImgNewsfeed"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_weight="2"
                app:civ_border_color="@color/colorDarkGray"
                app:civ_border_width="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nicknameNewsfeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/newsfeedUploadDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="15dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/more" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/rankNewsfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/roomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackNot"
                android:layout_marginHorizontal="5dp"
                android:text=" | " />

            <TextView
                android:id="@+id/raceTimeNewsfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackNot"
                android:layout_marginHorizontal="5dp"
                android:text=" | " />

            <TextView
                android:id="@+id/raceDistanceraceNewsfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackNot"
                android:layout_marginHorizontal="5dp"
                android:text=" | " />

            <TextView
                android:id="@+id/racePaceNewsfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/raceRankNewsfeed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/mapNewsfeed"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/maps" />
    </LinearLayout>
</LinearLayout>