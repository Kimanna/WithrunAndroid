<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileimg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        app:civ_border_color="@color/colorDarkGray"
        app:civ_border_width="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfileimg"
        android:layout_toEndOf="@+id/ivProfileimg"
        android:hint="nickname"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@+id/ivProfileimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNickName"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:background="@drawable/chat_incoming"
        app:layout_constraintStart_toStartOf="@+id/tvNickName"
        app:layout_constraintTop_toBottomOf="@+id/tvNickName" />

    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvMessage2"
        android:layout_alignBottom="@+id/tvMessage2"
        android:text="12:00"
        android:textSize="11dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvMessage2"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMessage2"
        app:layout_constraintStart_toEndOf="@+id/tvMessage2" />
</android.support.constraint.ConstraintLayout>